<dl id = 'items'>
  <% for item in @items %>
    <dt>
      <%= link_to item.name, :action => 'show', :id => item %>
    </dt>
    <% for provider in item.providers %>
      <dd><%= provider.name %></dd>
    <% end %>
    <dd>
        <strong>
          <%= link_to "+",  :controller => "cart",
                            :action => "add", :id => item %>
        </strong>
      </dd>
    <dd><%= sprintf("Price: %.2f â‚¬", item.price) %> </dd>
    <dd><small>Fabricante: <%= item.manufacturer.name %></small></dd>
  <% end %>
</dl>
